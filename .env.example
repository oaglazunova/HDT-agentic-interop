# Environment configuration
HDT_API_BASE=http://localhost:5000
HDT_API_KEY=MODEL_DEVELOPER_1

# MCP configuration
MCP_TRANSPORT=stdio
# MCP_TRANSPORT=streamable-http
MCP_CLIENT_ID=MODEL_DEVELOPER_1

# HDT configuration
HDT_ALLOW_PLACEHOLDER_MOCKS=1
HDT_ENABLE_POLICY_TOOLS=1
HDT_CACHE_TTL=60
HDT_RETRY_MAX=3
HDT_DISABLE_TELEMETRY=0

# Optional: privacy-preserving per-subject telemetry (stores only a hash)
# HDT_TELEMETRY_SUBJECT_SALT=change-me

# Vault configuration; switch to DuckDB later
HDT_VAULT_PATH=./data/hdt_vault.sqlite
HDT_VAULT_ENABLE=1

# Enable debug logging for user-related operations
DEBUG_USERS=1

# Enable in-process API server for testing:
HDT_API_INPROC=1
# Port for in-process API server:
HDT_API_INPROC_PORT=6000

# Optional: enables privacy-preserving per-subject telemetry linking (writes subject_hash, not raw user_id).
HDT_TELEMETRY_SUBJECT_SALT=demo-salt


