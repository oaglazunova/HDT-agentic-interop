[run]
branch = True
source =
    hdt_mcp

omit =
    # Provider adapters/parsers (exercise with integration tests, not unit tests)
    hdt_sources_mcp/core_infrastructure/*

    # Composition roots (heavy wiring; better measured in integration/CI)
    hdt_mcp/gateway.py
    hdt_sources_mcp/server.py

    # Demo/CLI/scripts, docs, models outside core runtime
    scripts/*
    docs/*
    Virtual_Twin_Models/*

    # Data artifacts
    data/*

    # Python cache
    */__pycache__/*
    *.pyc

[report]
exclude_lines =
    pragma: no cover
    if __name__ == ["']__main__["']:
    if TYPE_CHECKING:
    except Exception
    except:
    raise NotImplementedError

show_missing = True
